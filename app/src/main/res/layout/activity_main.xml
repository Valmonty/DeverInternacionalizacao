<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nomePaisLinearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomePaisTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/pais"
        android:textColor="@color/black"
        android:textSize="@dimen/nome_pais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        tools:text="@string/pais" />

    <ImageView
        android:id="@+id/bandeiraPaisImageView"
        android:layout_width="@dimen/bandeira_pais"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/bandeira"
        app:srcCompat="@drawable/bandeira"
        tools:srcCompat="@drawable/bandeira" />

    <ImageView
        android:id="@+id/comidaPaisImageView"
        android:layout_width="@dimen/bandeira_pais"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/comida"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/comidaPaisTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/comida"
        android:textColor="@color/black"
        android:textSize="@dimen/nome_pais" />

</LinearLayout>